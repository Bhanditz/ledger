{
  "name": "ledger",
  "version": "0.0.1",
  "description": "Double Entry Core Ledger for the Open Collective platform",
  "main": "dist/app.js",
  "engines": {
    "node": "10.7.0",
    "npm": "6.2.0"
  },
  "scripts": {
    "build:clean": "rm -rf dist && mkdir dist",
    "build-config": "babel config -d ./dist/config",
    "build-server": "babel server -d ./dist/server",
    "build-scripts": "babel scripts -d ./dist/scripts",
    "build-test": "babel test -d ./dist/test",
    "build": "npm run build:clean && npm run build-config && npm run build-server && npm run build-scripts && npm run build-test",
    "dev": "nodemon server/app.js -x babel-node . -e js,hbs",
    "start": "node ./dist/server/app.js",
    "postinstall": "npm run postinstall:build && sh ./scripts/postinstall.sh",
    "postinstall:build": "if test \"$NODE_ENV\" = \"\" || test \"$NODE_ENV\" = \"development\" ; then echo \"Skipping postinstall build because NODE_ENV is '${NODE_ENV}'\" ; else npm run build ; fi",
    "build-start": "npm run build && npm run start",
    "test": "NODE_ENV=test mocha --recursive --exit --require babel-core/register 'test/**/*.test.js' ",
    "recreate-test-db": "sh scripts/recreate_test_db_and_migrate.sh",
    "ledger-migration": "npm run build && node ./dist/scripts/migration/queueMigration.js",
    "ledger-internal-migration": "npm run build && node ./dist/scripts/migration/internalMigration.js",
    "migrate-test": "npm run recreate-test-db && npm run test",
    "db:setup": "npm run build && node ./dist/scripts/db_setup.js",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:migrate:undo": "node_modules/.bin/sequelize db:migrate:undo",
    "db:seed": "node_modules/.bin/sequelize db:seed:all",
    "doc": "node_modules/.bin/apidoc -i server/routes/ -o api-doc/ && open api-doc/index.html",
    "lint": "npx eslint '**/*.js'",
    "lint-fix": "npx eslint '**/*.js' --fix",
    "deploy:staging": "git push staging master",
    "deploy:prod": "git push prod master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opencollective/ledger.git"
  },
  "bugs": {
    "url": "https://github.com/opencollective/ledger/issues"
  },
  "homepage": "https://github.com/opencollective/ledger#readme",
  "dependencies": {
    "ajv": "6.6.1",
    "amqplib": "0.5.3",
    "apidoc": "0.17.7",
    "axios": "0.18.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.4",
    "babel-plugin-add-module-exports": "1.0.0",
    "babel-plugin-istanbul": "5.1.0",
    "babel-plugin-lodash": "3.3.4",
    "babel-polyfill": "6.26.0",
    "babel-preset-latest-node": "1.0.0",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.26.0",
    "bluebird": "3.5.3",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "coveralls": "3.0.2",
    "debug": "4.1.0",
    "dotenv": "6.1.0",
    "eslint": "5.9.0",
    "eslint-config-opencollective": "1.5.0",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-mocha": "6.3.0",
    "eslint-plugin-node": "8.0.0",
    "eslint-plugin-react": "7.11.1",
    "express": "4.16.4",
    "express-pino-logger": "4.0.0",
    "express-validator": "5.3.0",
    "http-status-codes": "1.3.0",
    "lru-cache": "5.1.1",
    "mocha": "5.2.0",
    "nock": "10.0.3",
    "nodemon": "1.18.7",
    "npx": "10.2.0",
    "nyc": "13.1.0",
    "path": "0.12.7",
    "pg": "7.7.1",
    "pg-async": "3.1.0",
    "pg-format": "1.0.4",
    "pg-hstore": "2.3.2",
    "pino": "5.9.0",
    "sequelize": "4.41.2",
    "sequelize-cli": "5.4.0",
    "sequelize-temporal": "1.0.6",
    "sinon": "7.1.1",
    "uuid": "3.3.2",
    "webpack": "4.27.0"
  },
  "devDependencies": {
    "mocha-circleci-reporter": "0.0.3"
  }
}
